<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/yueka_search_back"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:layout_gravity="center"
                android:textSize="@dimen/text_12"
                android:textColor="#cbcdb5"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/man"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circular_ori_background"
                    android:text="男"
                    android:layout_marginLeft="@dimen/padding_10"/>
                <RadioButton
                    android:id="@+id/woman"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:background="@drawable/circular_gray_background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:text="女"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄："
                android:textSize="@dimen/text_12"
                android:textColor="#cbcdb5"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.cn.uca.view.PickerScrollView
                        android:id="@+id/minute_pv"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="@dimen/padding_20"/>
                    <TextView
                        android:id="@+id/minute_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="~"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                    <com.cn.uca.view.PickerScrollView
                        android:id="@+id/second_pv"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/padding_20"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/picker_tv_bg" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">
            <TextView
                android:id="@+id/lable"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:text="标签搜索"
                android:textSize="10sp"
                android:padding="@dimen/padding_5"
                android:textColor="@color/white"
                android:gravity="center"
                android:drawableLeft="@mipmap/yueka_text_back"
                android:background="@drawable/twenty_circular_grey_background"/>
            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_toLeftOf="@id/submit"
                android:layout_marginRight="@dimen/padding_8"
                android:visibility="gone"
                android:padding="@dimen/padding_5"
                android:textCursorDrawable="@drawable/white_cursor_color"
                android:textColor="@color/white"
                android:background="@drawable/twenty_circular_grey_background"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>