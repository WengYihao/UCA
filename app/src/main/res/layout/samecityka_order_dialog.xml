<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@drawable/ten_circular_white_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
        </ListView>
        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1123444444444"
            android:textColor="@color/milky"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="确认支付"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/ten_circular_ori_background"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_above="@id/submit"
            android:id="@+id/count"
            android:layout_marginBottom="@dimen/padding_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_15"
                android:layout_weight="1"
                android:textSize="@dimen/text_16"
                android:text="总计" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥28"
                android:textSize="@dimen/text_16"
                android:textColor="@color/ori"
                android:layout_marginRight="@dimen/padding_12"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（订单若未支付，请前往我的-我的订单里支付，不必重新下单）"
            android:textColor="@color/milky"
            android:textSize="8sp"
            android:layout_above="@id/count"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginBottom="@dimen/padding_12"/>
    </RelativeLayout>
</LinearLayout>
