<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.uca.ui.view.user.FeedBackActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"
        android:background="@drawable/gradient" >
        <TextView
            android:id="@+id/back"
            style="@style/style_back" />
        <TextView
            android:id="@+id/title"
            style="@style/style_title"
            android:text="反馈" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_15">
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/gray"
            android:hint="请输入你想对我们说的话"
            android:gravity="top"
            android:padding="@dimen/padding_10"/>
        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:text="提交"
            android:gravity="center"
            android:background="@drawable/twenty_circular_ori_background"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_50"/>
    </LinearLayout>
</com.cn.uca.view.StatusView>
