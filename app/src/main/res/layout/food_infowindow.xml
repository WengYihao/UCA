<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:id="@+id/layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/view_infowindow_title_back">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/ori"
            android:padding="@dimen/padding_5"
            android:layout_marginLeft="@dimen/padding_5"
            android:textSize="@dimen/text_14"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/daohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_text"
                android:textColor="@color/gray2"
                android:padding="@dimen/padding_5"
                android:layout_marginRight="@dimen/padding_8"
                android:textSize="@dimen/text_14"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_infowindow_message_back"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="10"
            android:maxEms="15"
            android:textSize="10sp"
            android:padding="@dimen/padding_5" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/infowindow_back"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>