<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_20"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/back_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上一步"
                        android:padding="@dimen/padding_8"
                        android:textColor="@color/ori"
                        android:background="@drawable/text_lable_bg" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@drawable/content_lable_bg"
                        android:padding="@dimen/padding_5">

                        <EditText
                            android:id="@+id/content1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="top"
                            android:padding="@dimen/padding_5"
                            android:textSize="@dimen/text_14"
                            android:hint="请认真清晰的填写你的旅拍费用说明~"
                            android:textColorHint="@color/milky"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/five_top_circular_ori_background"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/padding_2"
                            android:text="费用说明" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@drawable/content_lable_bg"
                        android:padding="@dimen/padding_5">

                        <EditText
                            android:id="@+id/content2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="top"
                            android:padding="@dimen/padding_5"
                            android:textSize="@dimen/text_14"
                            android:hint="订购本产品的注意事项~"
                            android:textColorHint="@color/milky"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/five_top_circular_ori_background"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/padding_2"
                            android:text="预定须知" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/finish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/text_16"
                    android:background="@color/ori"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
