<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.cn.uca.view.CircleImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/padding_50"
            android:layout_height="@dimen/padding_50"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_15"
                android:gravity="center"
                android:textColor="@color/milky"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_8"
                android:layout_toRightOf="@id/name"
                android:background="@mipmap/chat_back"
                android:gravity="center" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/ori"
                android:textSize="@dimen/text_20" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_8">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/grey"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_8">
            <TextView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/padding_8"
                android:background="@drawable/twenty_circular_gray_background"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="拒单"
                android:textColor="@color/grey3" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/padding_8"
                android:background="@drawable/twenty_circular_ori_background"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="接单"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>