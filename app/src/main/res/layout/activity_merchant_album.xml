<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.uca.ui.view.home.lvpai.MerchantAlbumActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@drawable/gradient">

        <TextView
            android:id="@+id/back"
            style="@style/style_back"/>

        <TextView
            android:id="@+id/title"
            style="@style/style_title"
            android:text="相册" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/lvpai_add_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_10"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/pic_layout1"
                android:layout_width="180dp"
                android:layout_height="150dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="5dp">
                </com.facebook.drawee.view.SimpleDraweeView>
                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_15"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/five_right_circular_black_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/aa"
                        android:layout_marginTop="@dimen/padding_8"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摄影师snack作品"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12个内容"
                    android:textColor="@color/milky"
                    android:layout_marginTop="@dimen/padding_10"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_10">
            <RelativeLayout
                android:id="@+id/pic_layout2"
                android:layout_width="180dp"
                android:layout_height="150dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="5dp">
                </com.facebook.drawee.view.SimpleDraweeView>
                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_15"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/five_right_circular_black_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="214"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/aa"
                        android:layout_marginTop="@dimen/padding_8"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历年作品展示"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="214个内容"
                    android:textColor="@color/milky"
                    android:layout_marginTop="@dimen/padding_10"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_10">
            <RelativeLayout
                android:id="@+id/pic_layout3"
                android:layout_width="180dp"
                android:layout_height="150dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="5dp">
                </com.facebook.drawee.view.SimpleDraweeView>
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_15"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/five_right_circular_black_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/aa"
                        android:layout_marginTop="@dimen/padding_8"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我们的工作shi"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36个内容"
                    android:textColor="@color/milky"
                    android:layout_marginTop="@dimen/padding_10"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.cn.uca.view.StatusView>
