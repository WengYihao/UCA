<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"
                android:layout_marginTop="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_10"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/padding_15"
                android:layout_marginLeft="@dimen/padding_10">

                <ImageView
                    android:id="@+id/spot_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/padding_5"/>
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:maxEms="22"
                        android:singleLine="true"
                        android:textSize="10sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="@dimen/padding_15"
                        android:layout_height="@dimen/padding_15"
                        android:background="@mipmap/location"
                        android:layout_toRightOf="@id/address"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_5"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:id="@+id/introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/spotTickerActivity_text1"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:textSize="@dimen/text_12"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="@dimen/padding_10"
                            android:layout_height="@dimen/padding_10"
                            android:background="@mipmap/right_white"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/spot_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/content_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_15"
                android:textColor="@color/milky"
                android:textSize="@dimen/text_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/right_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_10"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.cn.uca.view.NoScrollListView
                android:id="@+id/ticket_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/gray"
                android:dividerHeight="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_10">
            </com.cn.uca.view.NoScrollListView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
