<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cn.uca.ui.TourismActivity">

    <RelativeLayout
        android:id="@+id/llImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/edc" />

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10">
        <TextView
            android:id="@+id/back"
            style="@style/style_back"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/search_background"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="深圳"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/city"
                android:src="@color/grey2" />

            <com.cn.uca.view.MyEditText
                android:layout_toRightOf="@id/city"
                android:id="@+id/seach"
                android:layout_width="250dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/loginactivity_cursor_color"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:hint="搜索关键词"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circular_background"
            android:layout_centerVertical="true"
            android:text="---"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/llList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llImg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当季旅游风向"
            android:padding="8dp"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llList">
        <com.cn.uca.view.HorizontalListView
            android:id="@+id/llName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.cn.uca.view.HorizontalListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llTouris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llPlace"
        android:background="@color/gray"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/aa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周边游"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@color/grey2" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/aa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国内游"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@color/grey2" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/aa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出境游"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/llTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTouris">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特色出行"
            android:padding="8dp"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llTouris2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llTitle2"
        android:background="@color/white"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/aa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定制游"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@color/grey2" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/aa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亲子游"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@color/grey2" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/aa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蜜月游"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@color/grey2" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/aa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="景点门票"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
