<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.register.SettingPasswordActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@drawable/gradient" >

        <TextView
            android:id="@+id/back"
            style="@style/style_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" />

        <TextView
            android:id="@+id/title"
            style="@style/style_title"
            android:text="@string/settingPassWordActivity_title_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10">
        <TextView
            android:layout_width="@dimen/padding_30"
            android:layout_height="@dimen/padding_30"
            android:background="@mipmap/setting_password_back"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/padding_10">
        <com.cn.uca.view.MyEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settingPasswordActivity_et_hint_text"
            android:padding="@dimen/padding_10"
            android:background="@color/white"
            android:textColorHint="@color/grey2"
            android:layout_marginTop="@dimen/padding_10"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:scaleType="matrix"
            android:src="@color/grey2"
            android:layout_marginTop="@dimen/padding_5"/>
    </LinearLayout>
    <TextView
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settingPasswordActivity_finish_text"
        android:textColor="@color/white"
        android:background="@drawable/twenty_circular_ori_background"
        android:padding="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginRight="@dimen/padding_40"
        android:gravity="center"
        android:textSize="@dimen/text_22"
        android:layout_marginTop="@dimen/padding_20"
        android:clickable="false"/>
</com.cn.uca.view.StatusView>
