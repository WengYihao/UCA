<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cn.uca.ui.SettingPasswordActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@color/ori"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_noresult"
        android:layout_toEndOf="@+id/tv_noresult">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settingPasswordActivity_title_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_22" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10">
        <TextView
            android:layout_width="@dimen/padding_25"
            android:layout_height="@dimen/padding_25"
            android:background="@color/aa"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/padding_10">
        <com.cn.uca.view.MyEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settingPasswordActivity_et_hint_text"
            android:padding="@dimen/padding_10"
            android:background="@color/white"
            android:textColorHint="@color/grey2"
            android:layout_marginTop="@dimen/padding_10"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:scaleType="matrix"
            android:src="@color/grey2"
            android:layout_marginTop="@dimen/padding_5"/>
    </LinearLayout>
    <TextView
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settingPasswordActivity_finish_text"
        android:textColor="@color/white"
        android:background="@drawable/register_btn_click_background"
        android:padding="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginRight="@dimen/padding_40"
        android:gravity="center"
        android:textSize="@dimen/text_22"
        android:layout_marginTop="@dimen/padding_20"
        android:clickable="false"/>
</LinearLayout>
