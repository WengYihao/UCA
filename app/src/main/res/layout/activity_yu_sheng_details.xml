<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cn.uca.ui.view.home.yusheng.YuShengDetailsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@drawable/gradient">
        <TextView
            android:id="@+id/back"
            style="@style/style_back"/>
        <TextView
            android:id="@+id/yusheng"
            style="@style/style_title"
            android:text="余生"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/yusheng"
            android:layout_marginRight="@dimen/padding_15"
            android:text="你的"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/yusheng"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_15"
            android:text="还剩"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/twenty_circular_ori_background"
        android:padding="@dimen/padding_5"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/twenty_circular_white_background"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="天"
                android:textSize="@dimen/text_18"
                android:textColor="@color/ori"
                android:gravity="center"
                android:padding="@dimen/padding_10"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lable2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/twenty_circular_white_background"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="月"
                android:textSize="@dimen/text_18"
                android:textColor="@color/ori"
                android:gravity="center"
                android:padding="@dimen/padding_10"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lable3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/twenty_circular_white_background"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="痕迹"
                android:textSize="@dimen/text_18"
                android:textColor="@color/ori"
                android:gravity="center"
                android:padding="@dimen/padding_10"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</com.cn.uca.view.StatusView>
