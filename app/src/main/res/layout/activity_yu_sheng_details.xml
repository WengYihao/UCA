<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cn.uca.ui.view.home.yusheng.YuShengDetailsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@drawable/gradient">
        <TextView
            android:id="@+id/back"
            style="@style/style_back"/>
        <TextView
            android:id="@+id/yusheng"
            style="@style/style_title"
            android:text="@string/yushengActivity_title_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/yusheng"
            android:layout_marginRight="@dimen/padding_15"
            android:text="@string/yushengDetailActivity_title1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/yusheng"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_15"
            android:text="@string/yushengDetailActivity_title3"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="@dimen/padding_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="@string/yushengDetailActivity_text1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="@string/yushengDetailActivity_text2"
                    android:textColor="@color/ori"
                    android:textSize="@dimen/text_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="@string/yushengDetailActivity_text3"
                    android:textColor="@color/ori"
                    android:textSize="@dimen/text_14" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/lable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/yushengDetailActivity_text1"
            android:gravity="center"
            android:background="@drawable/twenty_circular_ori_background"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="matrix"
        android:src="@color/ori" />
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" >
    </android.support.v4.view.ViewPager>
</com.cn.uca.view.StatusView>
