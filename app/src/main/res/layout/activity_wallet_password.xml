<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.uca.ui.view.user.WalletPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"
        android:background="@drawable/gradient" >

        <TextView
            android:id="@+id/back"
            style="@style/style_back" />

        <TextView
            android:id="@+id/title"
            style="@style/style_title"
            android:text="充值设置" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入6位支付密码"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_50"/>
        <com.cn.uca.view.PasswordInputView
            android:id="@+id/passwordView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="number"
            app:passwordLength="6"
            app:borderWidth="1px"
            app:passwordWidth="6dp"
            app:borderColor="@color/gray2"
            android:layout_centerInParent="true"
            app:passwordColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_30"/>
    </LinearLayout>
</com.cn.uca.view.StatusView>
