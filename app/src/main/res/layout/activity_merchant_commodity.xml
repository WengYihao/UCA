<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.uca.ui.view.home.lvpai.MerchantCommodityActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:background="@drawable/gradient">

            <TextView
                android:id="@+id/back"
                style="@style/style_back" />

            <TextView
                android:id="@+id/title"
                style="@style/style_title"
                android:text="商品" />
            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lvpai_add_back"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_15"
                android:text="销售中"
                android:textColor="@color/ori"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:src="@color/gray" />

            <TextView
                android:id="@+id/title02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_15"
                android:text="已下架"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ten_circular_white_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@color/aa" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_12"
                                android:layout_marginTop="@dimen/padding_15"
                                android:text="深圳海岸婚纱摄影"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_16" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/name"
                                android:layout_marginLeft="@dimen/padding_10"
                                android:layout_marginTop="@dimen/padding_20"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/text_lable_white_border_bg"
                                    android:text="浪漫"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_15"
                                android:layout_alignParentBottom="true"
                                android:text="深圳"
                                android:layout_marginBottom="@dimen/padding_8"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="matrix"
                        android:src="@color/gray" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/padding_12"
                            android:text="收藏213"
                            android:textColor="@color/milky"
                            android:textSize="@dimen/text_14" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/padding_12"
                            android:text="已购1"
                            android:textColor="@color/milky"
                            android:textSize="@dimen/text_14" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/padding_12"
                            android:text="评价1"
                            android:textColor="@color/milky"
                            android:textSize="@dimen/text_14" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.cn.uca.view.StatusView>
