<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="约咖名称"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_8"
                android:text="深圳"
                android:textColor="@color/ori" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="2017-08-24~2017-08-29"
                android:layout_toRightOf="@id/place"
                android:layout_centerVertical="true"
                android:textColor="#bfbfbf" />

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_12"
                android:background="@mipmap/right_gray" />

            <TextView
                android:id="@+id/sum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/a"
                android:gravity="center"
                android:padding="2dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无服务"
                android:textColor="#bfbfbf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>