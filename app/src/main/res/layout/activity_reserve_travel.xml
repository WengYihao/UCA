<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.uca.ui.view.home.travel.ReserveTravelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"
        android:background="@drawable/gradient">

        <TextView
            android:id="@+id/back"
            style="@style/style_back" />

        <TextView
            android:id="@+id/title"
            style="@style/style_title"
            android:text="选择日期/出行人数" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cn.uca.view.HorizontalListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:background="@drawable/gradient"></com.cn.uca.view.HorizontalListView>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="日" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:src="@color/gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="一" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:src="@color/gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="二" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:src="@color/gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="三" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:src="@color/gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="四" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:src="@color/gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="五" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:src="@color/gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="六" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="matrix"
            android:src="@color/gray" />

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:background="@color/gray"
            android:numColumns="7"></GridView>
    </LinearLayout>
</LinearLayout>
