<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/view_infowindow_title_back">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赏心悦目"
            android:textColor="@color/black"
            android:padding="@dimen/padding_5"
            android:layout_marginLeft="@dimen/padding_5"
            android:textSize="@dimen/text_20"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/view_infowindow_message_back"
        android:padding="@dimen/padding_5">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/padding_5"
            android:background="@mipmap/edc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:lines="2"
                android:ellipsize="end"
                android:text="亲爱的朋友，我们现在正在位于南沙水鸟世界生态园六个观赏岛其一的千鹤洲..." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/aa"
                    android:text="解说"
                    android:gravity="center"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:text="详情"
                    android:gravity="center"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:background="@color/aa" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/infowindow_back"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>