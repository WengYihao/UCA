<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cn.uca.ui.user.InfoActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@drawable/text" >

        <TextView
            android:id="@+id/back"
            style="@style/style_back"/>

        <TextView
            android:id="@+id/title"
            style="@style/style_title"/>

        <TextView
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infoActivity_finish_text"
            android:textColor="@color/white"
            android:padding="@dimen/padding_8"
            android:textSize="@dimen/text_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_5"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <com.cn.uca.view.MyEditText
            android:id="@+id/myEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:background="@color/white"
            android:padding="@dimen/padding_5" />

        <com.cn.uca.view.MyEditText
            android:id="@+id/codePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:padding="@dimen/padding_5"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/ori"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </LinearLayout>
</com.cn.uca.view.StatusView>
