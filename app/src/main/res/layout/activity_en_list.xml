<?xml version="1.0" encoding="utf-8"?>
<com.cn.uca.view.StatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context="com.cn.uca.ui.view.home.samecityka.EnListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"
        android:background="@drawable/gradient">

        <TextView
            android:id="@+id/back"
            style="@style/style_back" />

        <TextView
            android:id="@+id/title"
            style="@style/style_title"
            android:text="报名设置" />
        <TextView
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_12"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10">
        <TextView
            android:id="@+id/online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="在线报名"
            android:background="@drawable/twenty_circular_ori_background"
            android:textColor="@color/white"
            android:padding="@dimen/padding_10"
            android:gravity="center"
            android:textSize="@dimen/text_10"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginRight="@dimen/padding_20"/>
        <TextView
            android:id="@+id/unwanted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="无需报名"
            android:background="@drawable/twenty_circular_white_background"
            android:textColor="@color/grey"
            android:padding="@dimen/padding_10"
            android:gravity="center"
            android:textSize="@dimen/text_10"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_20"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">
                <LinearLayout
                    android:id="@+id/onlistmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ten_circular_white_background"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/padding_10">
                    <com.cn.uca.view.FluidLayout
                        android:id="@+id/recommendView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15">
                    </com.cn.uca.view.FluidLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="勾选项为参加报名者必填事项"
                        android:layout_marginLeft="@dimen/padding_20"
                        android:layout_marginTop="@dimen/padding_40"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15"
                        android:layout_marginBottom="@dimen/padding_15">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">
                            <CheckBox
                                android:id="@+id/abroad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/checkbox_style"
                                android:text="我已阅读并接受"
                                android:textColor="@drawable/selector_menu_text_color" />
                            <TextView
                                android:id="@+id/notice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="《发布须知》"
                                android:textColor="@color/ori"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <TextView
                    android:id="@+id/addTicket"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/twenty_circular_white_background"
                    android:text="添加门票"
                    android:textColor="@color/ori"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/padding_40"
                    android:layout_marginRight="@dimen/padding_40"
                    android:layout_marginTop="@dimen/padding_40"
                    android:layout_marginBottom="@dimen/padding_40"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="@dimen/padding_10"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="@dimen/padding_10"
            android:background="@drawable/ten_circular_white_background">
            <LinearLayout
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/text_lable_gray_bg"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/padding_15"
                android:layout_marginRight="@dimen/padding_10">
                <TextView
                    android:id="@+id/charge"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="收费"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:padding="@dimen/padding_5"/>
                <TextView
                    android:id="@+id/free"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="免费"
                    android:gravity="center"
                    android:background="@drawable/twenty_circular_ori_background"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/a"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/padding_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无需报名直接参加"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginLeft="@dimen/padding_10"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.cn.uca.view.StatusView>
