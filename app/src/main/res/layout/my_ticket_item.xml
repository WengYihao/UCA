<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ten_circular_white_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/code_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ticket_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_30"
                android:layout_weight="1"
                android:text="门票x1，门票2x2"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/ticket_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/padding_15"
                android:background="@mipmap/ticket_code" />
        </LinearLayout>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layout3"
            android:scaleType="matrix"
            android:src="@color/gray" />

        <RelativeLayout
            android:id="@+id/action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:background="@color/white"
            android:padding="@dimen/padding_10">


            <TextView
                android:id="@+id/action_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="这个活动啊啊啊"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/state"
                android:layout_width="@dimen/padding_50"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_toRightOf="@id/action_name"
                android:background="@drawable/text_lable_gray_bg"
                android:gravity="center"
                android:padding="@dimen/padding_2"
                android:text="未开始"
                android:textColor="@color/grey2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/padding_10"
                android:src="@mipmap/right_gray" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>