<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/padding_10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/arrowView"
            android:layout_width="@dimen/padding_20"
            android:layout_height="@dimen/padding_20"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/lineName"
            android:layout_width="200dp"
            android:layout_height="@dimen/padding_40"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_toRightOf="@id/arrowView"
            android:background="@color/gray"
            android:text="æˆ‘"
            android:textColor="@color/grey"
            android:gravity="center"/>

        <TextView
            android:id="@+id/editLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit_back" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.cn.uca.view.NoScrollListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10">
        </com.cn.uca.view.NoScrollListView>
    </LinearLayout>
</LinearLayout>