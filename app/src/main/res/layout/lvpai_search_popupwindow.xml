<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/half">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginLeft="@dimen/padding_5">
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位"
                android:layout_centerVertical="true"
                android:textColor="@color/ori"/>

            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@mipmap/location_ori"
                android:layout_toRightOf="@id/location"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lvpai_open"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_15"/>
        </RelativeLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="查看"
            android:textColor="@color/white"
            android:padding="3dp"
            android:gravity="center"
            android:textSize="@dimen/text_10"
            android:layout_marginLeft="2dp"
            android:background="@drawable/ten_right_circular_green_background"
            android:layout_marginTop="@dimen/padding_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10">
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按评分"
                android:textColor="@color/white"
                android:button="@null"/>
            <TextView
                android:id="@+id/icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@mipmap/lvpai_default_back"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/config"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="确定"
                android:gravity="center"
                android:background="@color/ori"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
