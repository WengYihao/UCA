<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/man"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/sex_dialog_man_background"
        android:gravity="center"
        android:text="@string/dialog_man"
        android:textColor="@color/ori"
        android:textSize="@dimen/text_18"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray2"/>
    <Button
        android:id="@+id/woman"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/sex_dialog_woman_background"
        android:gravity="center"
        android:text="@string/dialog_woman"
        android:textColor="@color/ori"
        android:textSize="@dimen/text_18" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/padding_8"
        android:background="@drawable/sex_dialog_cancel_background"
        android:gravity="center"
        android:text="@string/dialog_show_cancel"
        android:textColor="@color/ori"
        android:textSize="@dimen/text_18" />
</LinearLayout>
