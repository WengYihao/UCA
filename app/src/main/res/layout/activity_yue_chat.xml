<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.yueka.YueChatActivity"
    android:background="@color/gray">
    <TextView
        android:id="@+id/stateTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_20"
        android:background="@drawable/gradient"/>
    <RelativeLayout
        android:id="@+id/llTitle"
        android:layout_below="@id/stateTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@drawable/gradient" >
        <TextView
            android:id="@+id/back"
            style="@style/style_back"/>

        <TextView
            android:id="@+id/title"
            style="@style/style_title"
            android:maxEms="10"/>
        <TextView
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/nocollection"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/llTitle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="200dp">
              <com.cn.uca.view.Banner
                  android:id="@+id/banner"
                  app:layout_id="@layout/banner_custom_viewpager"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
              <RelativeLayout
                  android:id="@+id/layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/black3"
                  android:layout_alignParentBottom="true"
                  android:padding="@dimen/padding_10">
                  <TextView
                      android:id="@+id/sum"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/text_12"
                      android:layout_marginLeft="@dimen/padding_10"
                      android:layout_centerVertical="true"
                      android:text="10"
                      android:textColor="@color/white"/>
                  <TextView
                      android:id="@+id/maxPeople"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/text_12"
                      android:textColor="@color/white"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="@dimen/padding_10"
                      android:layout_centerVertical="true"
                      android:text="45"/>
              </RelativeLayout>

              <com.cn.uca.view.CircleImageView
                  android:id="@+id/pic"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:layout_alignParentBottom="true"
                  android:layout_centerHorizontal="true"
                  android:layout_marginBottom="@dimen/padding_10"
                  android:background="@mipmap/user_pic"/>
          </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/gray"
                android:padding="@dimen/padding_8"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@mipmap/info_back">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/padding_8"
                                android:layout_marginTop="@dimen/padding_12"
                                android:layout_marginLeft="@dimen/padding_2"
                                android:background="@drawable/ten_right_circular_pink_background"
                                android:gravity="center"
                                android:padding="@dimen/padding_8"
                                android:text="123"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/sex"
                                android:layout_width="@dimen/padding_20"
                                android:layout_height="@dimen/padding_20"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/padding_10"
                                android:layout_marginRight="@dimen/padding_30" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/padding_10"
                                android:layout_marginLeft="@dimen/padding_8"
                                android:text="12"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_20"
                                android:layout_marginTop="@dimen/padding_10"
                                android:text="456"
                                android:textColor="@color/ori"
                                android:textSize="@dimen/text_16" />

                            <com.cn.uca.view.RatingStarView
                                android:id="@+id/start"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/padding_15"
                                android:layout_marginTop="@dimen/padding_10"
                                app:rating="4"
                                app:starBackgroundColor="@color/gray"
                                app:starForegroundColor="@color/yellow"
                                app:starNum="5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.cn.uca.view.FluidLayout
                                android:id="@+id/lable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_20"
                                android:layout_marginTop="@dimen/padding_5"></com.cn.uca.view.FluidLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="@string/yukaCahtActivity_text1"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/title02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="@string/yukaCahtActivity_text2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_10"  >

        <TextView
            android:id="@+id/title03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_15"
            android:text="@string/yukaCahtActivity_text3"
            android:background="@color/white"
            android:textColor="@color/ori"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/title04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/ori"
            android:gravity="center"
            android:padding="@dimen/padding_15"
            android:text="@string/yukaCahtActivity_text4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp" />
</RelativeLayout>
