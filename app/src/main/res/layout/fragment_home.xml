<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.cn.uca.view.StickyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/aaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.cn.uca.view.Banner
                    android:id="@+id/banner"
                    app:layout_id="@layout/banner_custom_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:layout_below="@+id/aaa"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/planeTicket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/plant_ticketbackgrouond" />

                <TextView
                    android:id="@+id/hotel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:background="@mipmap/hotel_background" />

                <TextView
                    android:id="@+id/tourism"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/tourism_background"
                    android:gravity="center"
                    android:layout_marginLeft="20px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/aa"
                android:layout_below="@id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/oneRaiders"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@mipmap/one_raiders"
                    android:layout_marginTop="@dimen/padding_50"
                    android:gravity="center"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_8">
                    <TextView
                        android:id="@+id/one_raiders_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一元攻略"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_20"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_8"
                        android:layout_toRightOf="@id/one_raiders_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_8"
                        android:background="@color/blue2"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </com.cn.uca.view.StickyScrollView>

    <RelativeLayout
        android:id="@+id/ll_good_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30"
            android:layout_centerHorizontal="true"
            android:background="@drawable/search_background"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginRight="@dimen/padding_20">

            <ImageView
                android:id="@+id/search"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/search_nav" />

            <TextView
                android:layout_toRightOf="@id/search"
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_20"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:hint="请输入搜索关键字"
                android:textSize="@dimen/text_12" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
