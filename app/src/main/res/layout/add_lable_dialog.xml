<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/twenty_circular_gray_background">

            <EditText
                android:id="@+id/lable_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/padding_15"
                android:layout_marginRight="@dimen/padding_15"
                android:background="@color/gray"
                android:hint="自由输入标签(四字以内)"
                android:maxLength="4"
                android:textColorHint="@color/milky"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12"
                android:layout_marginLeft="@dimen/padding_8"
                android:text="快速选择标签"
                android:textColor="@color/grey" />
            <com.cn.uca.view.FluidLayout
                android:id="@+id/lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.cn.uca.view.FluidLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/config"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/ori"
        android:gravity="center"
        android:text="@string/dialog_show_commit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18"
        android:layout_marginTop="@dimen/padding_5"/>
</LinearLayout>
